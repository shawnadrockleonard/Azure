{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "customer": {
      "type": "string",
      "allowedValues": [
        "ardev",
        "arprod"
      ]
    },
    "environment": {
      "type": "string",
      "defaultValue": "shared"
    },
    "cbSqlPassword": {
      "type": "securestring"
    },
    "baseTime": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    }
  },
  "variables": {
    "storageContainers": [
      "devtest",
      "staging"
    ],
    "storageFileShares": [
      "arprodssis",
      "arproddownloads",
      "cloudcli"
    ],
    "storageName": "[toLower(concat(parameters('customer'), 'storage'))]",
    "accountSasStart": "[dateTimeAdd(parameters('baseTime'), '-PT6H')]",
    "accountSasExpiry": "[dateTimeAdd(parameters('baseTime'), 'P6M')]",
    "accountSasProperties": {
      "signedServices": "bf",
      "signedPermission": "r",
      "signedStart": "[variables('accountSasStart')]",
      "signedExpiry": "[variables('accountSasExpiry')]",
      "signedResourceTypes": "sco"
    },
    "keyVaultName": "[toLower(concat(parameters('customer'), 'kv'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-05-01",
      "name": "storageAccountShared",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2018-07-01",
              "name": "[variables('storageName')]",
              "location": "[resourceGroup().location]",
              "tags": {
                "Customer": "[parameters('customer')]",
                "environment": "[parameters('environment')]",
                "displayName": "storage"
              },
              "kind": "StorageV2",
              "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
              },
              "properties": {
                "networkAcls": {
                  "bypass": "AzureServices",
                  "virtualNetworkRules": [
                  ],
                  "ipRules": [
                  ],
                  "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                  "services": {
                    "file": {
                      "enabled": true
                    },
                    "blob": {
                      "enabled": true
                    }
                  },
                  "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
              }
            }
          ],
          "outputs": {
            "storageAccountName": {
              "type": "string",
              "value": "[variables('storageName')]"
            },
            "storageAccountId": {
              "type": "string",
              "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
            },
            "storageAccountBlobEndpoint": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2019-04-01').primaryEndpoints.blob]"
            },
            "storageAccountConnection": {
              "type": "string",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageName'), ';AccountKey=', listKeys(variables('storageName'), '2019-04-01').keys[0].value, ';EndpointSuffix=core.usgovcloudapi.net')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-05-01",
      "name": "keyVaultShared",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'storageAccountShared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "name": "[variables('keyVaultName')]",
              "type": "Microsoft.KeyVault/vaults",
              "apiVersion": "2018-02-14",
              "location": "[resourceGroup().location]",
              "tags": {
                "Customer": "[parameters('customer')]",
                "environment": "[parameters('environment')]",
                "displayName": "key vault"
              },
              "properties": {
                "sku": {
                  "family": "A",
                  "name": "Premium"
                },
                "tenantId": "[subscription().tenantId]",
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableRbacAuthorization": false,
                "accessPolicies": []
              },
              "dependsOn": [
              ]
            },
            {
              "name": "[concat(variables('keyVaultName'), '/', 'AZBUILDSQLUSR')]",
              "type": "Microsoft.KeyVault/vaults/secrets",
              "apiVersion": "2018-02-14",
              "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', variables('keyVaultName'))]"
              ],
              "properties": {
                "value": "[parameters('cbSqlPassword')]"
              }
            }
          ],
          "outputs": {
            "keyVaultId": {
              "type": "string",
              "value": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
            },
            "keyVaultUri": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName')), '2018-02-14').vaultUri]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "keyVaultId": {
      "type": "string",
      "value": "[reference('keyVaultShared').outputs.keyVaultId.value]"
    },
    "keyVaultUri": {
      "type": "string",
      "value": "[reference('keyVaultShared').outputs.keyVaultUri.value]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[reference('storageAccountShared').outputs.storageAccountName.value]"
    },
    "storageAccountId": {
      "type": "string",
      "value": "[reference('storageAccountShared').outputs.storageAccountId.value]"
    },
    "storageAccountBlobEndpoint": {
      "type": "string",
      "value": "[reference('storageAccountShared').outputs.storageAccountBlobEndpoint.value]"
    },
    "storageAccountConnection": {
      "type": "string",
      "value": "[reference('storageAccountShared').outputs.storageAccountConnection.value]"
    },
    "subscriptionId": {
      "type": "string",
      "value": "[subscription().subscriptionId]"
    }
  }
}