                ]
              }
            ],
            "osType": "windows",
            "dataDisks": {
              "count": 1,
              "properties": {
                "diskSizeGB": 128,
                "caching": "None",
                "createOption": "empty"
              }
            },
            "extensions": [
              {
                "name": "config",
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.7",
                "autoUpgradeMinorVersion": true,
                "settings": {
                  "configuration": {
                    "url": "https://github.com/mspnp/reference-architectures/raw/master/identity/adds-extend-domain/adds.zip",
                    "script": "config.ps1",
                    "function": "Config"
                  }
                },
                "protectedSettings": { 
                  "configurationArguments": {
                    "DomainName": "contoso.com",
                    "PrimaryDcIpAddress": "192.168.0.4",
                    "AdminCreds": {
                          "UserName": "testadminuser",
                          "Password": ""
                    }                  
                  }
                }
              }
            ],
            "loadBalancerSettings": {
              "frontendIPConfigurations": [
                {
                  "name": "dmz-lb-fe-config1",
                  "loadBalancerType": "Internal",
                  "internalLoadBalancerSettings": {
                    "privateIPAddress": "10.0.1.100",
                    "subnetName": "web"
                  }
                }
              ],
              "loadBalancingRules": [
                {
                  "name": "lbr1",
                  "frontendPort": 80,
                  "backendPort": 80,
                  "protocol": "Tcp",
                  "backendPoolName": "dmz-vm-lb-bep1",
                  "frontendIPConfigurationName": "dmz-lb-fe-config1",
                  "enableFloatingIP": false,
                  "probeName": "lbp1"
                },
                {
                  "name": "lbr2",
                  "frontendPort": 443,
                  "backendPort": 443,
                  "protocol": "Tcp",
                  "backendPoolName": "dmz-vm-lb-bep1",
                  "frontendIPConfigurationName": "dmz-lb-fe-config1",
                  "enableFloatingIP": false,
                  "probeName": "lbp2"
                }                
              ],
              "probes": [
                {
                  "name": "lbp1",
                  "port": 80,
                  "protocol": "Tcp",
                  "requestPath": null
                },
                {
                  "name": "lbp2",
                  "port": 443,
                  "protocol": "Tcp",
                  "requestPath": null
                }
              ],
              "backendPools": [
                {
                  "name": "dmz-vm-lb-bep1",
                  "nicIndex": 0
                }
              ]
            }
          }
        },
        {
          "type": "VirtualMachine",
          "settings":{
            "namePrefix": "ra-adds-mgmt",
            "computerNamePrefix": "jumpbox",
            "virtualNetwork": {
              "name": "adds-vnet"
            },            
            "osType": "windows",
            "adminUsername": "testuser",
            "adminPassword": "",
            "nics": [
              {
                "subnetName": "mgmt",
                "privateIPAllocationMethod": "Static",
                "startingIPAddress": "10.0.0.132"
